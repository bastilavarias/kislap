# Stage 1: Builder
# --------------------------------------------------------
# Use a specific version for consistency (check if 1.25 is available, otherwise use 1.24)
FROM golang:1.24-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o main .

FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/main .

EXPOSE 5000

# Run the binary
CMD ["./main"]