# ---------------------------------
# Database Credentials
# ---------------------------------
# This is the master password used by MySQL container creation
DB_PASSWORD=secret_production_password_123

# ---------------------------------
# Flash (Go App) Configuration
# ---------------------------------
# These will be passed to kislap_flash via its own env_file or direct mapping
FLASH_APP_PORT=5000
# "release" optimizes Gin/Go for speed and disables debug logs
GIN_MODE=release

# ---------------------------------
# Admin (Laravel/PHP) Configuration
# ---------------------------------
APP_ENV=production
APP_DEBUG=false
APP_URL=https://kislap.app

# Database connection for your apps (Flash & Admin)
# Note: Host must match the container_name in docker-compose ("kislap_database")
DB_HOST=kislap_database
DB_PORT=3306
DB_DATABASE=kislap
DB_USERNAME=root
# We reuse the variable above so you only change password in one place
DB_PASSWORD=${DB_PASSWORD}