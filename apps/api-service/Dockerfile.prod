FROM golang:1.25-alpine AS builder

WORKDIR /app

# 1. INSTALL THIS: This provides GCC and other C tools
RUN apk add --no-cache build-base

COPY go.mod go.sum ./
RUN go mod download

COPY . .

# 2. Now this command will work
RUN CGO_ENABLED=1 GOOS=linux go build -ldflags="-s -w" -o main .

FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/main .

EXPOSE 5000

CMD ["./main"]